<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.ConstraintActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/green"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toStartOf="@id/guideline1"/>


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/top_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.025"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/edit_2"
            android:hint="에딧트 텍스트 예제 입니당"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
        <EditText
            android:id="@+id/edit_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.025"
            app:layout_constraintTop_toBottomOf="@id/edit_1"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/edit_3"
            android:hint="텍스트 예제 입니당"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
        <EditText
            android:id="@+id/edit_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.025"
            app:layout_constraintTop_toBottomOf="@id/edit_2"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            android:hint="예제 입니당"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_image"
            android:layout_margin="10dp"
            android:background="@drawable/ic_book_mark_24"/>

        <Button
            android:id="@+id/try_btn"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.45"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/button_experience_msg"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:background="@drawable/background_button_not_click"/>

        <Button
            android:id="@+id/install_btn"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.45"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:text="@string/button_install_msg"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/background_button_click"/>

        <TextView
            android:id="@+id/big_line_1"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.015"
            app:layout_constraintTop_toBottomOf="@id/install_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/big_line_1"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>